<UserControl x:Class="Mordorings.Modules.DungeonStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:modules="clr-namespace:Mordorings.Modules"
             xmlns:controls="clr-namespace:Mordorings.Controls"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="270"
             d:DataContext="{d:DesignInstance modules:DungeonStateViewModel}">
    <UserControl.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="84" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="18" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>
    </UserControl.Resources>
    <Canvas>
        <Label Content="Monster" Canvas.Left="14" Canvas.Top="13" />
        <ComboBox Canvas.Left="63" Canvas.Top="10"
                  Width="200"
                  ItemsSource="{Binding Path=Monsters}"
                  SelectedItem="{Binding Path=Model.SelectedMonster}"
                  DisplayMemberPath="Name" />
        <CheckBox Content="Spawn Monster"
                  Canvas.Left="36" Canvas.Top="50"
                  IsChecked="{Binding Path=SpawnMonster}"
                  d:IsChecked="True" />
        <Canvas Name="CanvasMonster"
                Width="160" Height="180"
                Canvas.Left="14" Canvas.Top="69"
                IsEnabled="{Binding Path=SpawnMonster}">
            <Border BorderBrush="Silver"
                    BorderThickness="1"
                    Height="{Binding Path=Height, ElementName=CanvasMonster}"
                    Width="{Binding Path=Width, ElementName=CanvasMonster}" />
            <Label Content="Hits" Canvas.Left="64" Canvas.Top="6" />
            <Label Content="Current" Canvas.Left="5" Canvas.Top="28" />
            <TextBox Canvas.Left="50" Canvas.Top="27" d:Text="25">
                <TextBox.Text>
                    <Binding Path="Model.CurrentHits">
                        <Binding.Converter>
                            <controls:StringToIntConverter EmptyStringValue="0" />
                        </Binding.Converter>
                    </Binding>
                </TextBox.Text>
                <b:Interaction.Behaviors>
                    <controls:NumericOnlyBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <Label Content="Max" Canvas.Left="94" Canvas.Top="28" />
            <TextBox Canvas.Left="118" Canvas.Top="27" d:Text="1200">
                <TextBox.Text>
                    <Binding Path="Model.MaxHits">
                        <Binding.Converter>
                            <controls:StringToIntConverter EmptyStringValue="0" />
                        </Binding.Converter>
                    </Binding>
                </TextBox.Text>
                <b:Interaction.Behaviors>
                    <controls:NumericOnlyBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <Label Content="Atk" Canvas.Left="27" Canvas.Top="52" />
            <TextBox Canvas.Left="50" Canvas.Top="51" d:Text="1500">
                <TextBox.Text>
                    <Binding Path="Model.Attack">
                        <Binding.Converter>
                            <controls:StringToIntConverter EmptyStringValue="0" />
                        </Binding.Converter>
                    </Binding>
                </TextBox.Text>
                <b:Interaction.Behaviors>
                    <controls:NumericOnlyBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <Label Content="Def" Canvas.Left="95" Canvas.Top="52" />
            <TextBox Canvas.Left="118" Canvas.Top="51" d:Text="100">
                <TextBox.Text>
                    <Binding Path="Model.Defense">
                        <Binding.Converter>
                            <controls:StringToIntConverter EmptyStringValue="0" />
                        </Binding.Converter>
                    </Binding>
                </TextBox.Text>
                <b:Interaction.Behaviors>
                    <controls:NumericOnlyBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <Label Content="Group Size" Canvas.Left="3" Canvas.Top="78" />
            <TextBox Canvas.Left="66" Canvas.Top="77" Width="24" d:Text="6">
                <TextBox.Text>
                    <Binding Path="Model.GroupSize">
                        <Binding.Converter>
                            <controls:StringToIntConverter EmptyStringValue="0" />
                        </Binding.Converter>
                    </Binding>
                </TextBox.Text>
                <b:Interaction.Behaviors>
                    <controls:NumericOnlyBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <Label Content="Alignment" Canvas.Left="3" Canvas.Top="108" />
            <ComboBox Canvas.Left="68" Canvas.Top="105"
                      ItemsSource="{Binding Path=Model.Alignments}"
                      SelectedItem="{Binding Path=Model.Alignment}" />
            <CheckBox Content="Friendly"
                      Canvas.Left="3" Canvas.Top="133"
                      IsChecked="{Binding Path=Model.Friendly}"
                      d:IsChecked="True" />
            <Label Content="Number to Join" Canvas.Left="4" Canvas.Top="156" />
            <TextBox Text="{Binding Path=Model.NumToJoin}"
                     Canvas.Left="91" Canvas.Top="155"
                     Width="15"
                     IsEnabled="{Binding Path=Model.Friendly}"
                     d:Text="2">
                <b:Interaction.Behaviors>
                    <controls:NumericOnlyBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
        </Canvas>
        <CheckBox Content="Spawn Treasure"
                  Canvas.Left="220" Canvas.Top="50"
                  d:IsChecked="True"
                  IsChecked="{Binding Path=SpawnTreasure}" />
        <Canvas Name="CanvasTreasure"
                Height="96" Width="183"
                Canvas.Left="201" Canvas.Top="69"
                IsEnabled="{Binding Path=SpawnTreasure}">
            <Border BorderBrush="Silver" BorderThickness="1"
                    Height="{Binding Path=Height, ElementName=CanvasTreasure}"
                    Width="{Binding Path=Width, ElementName=CanvasTreasure}" />
            <Label Content="Chest Type" Canvas.Left="16" Canvas.Top="13" />
            <ComboBox Canvas.Left="81" Canvas.Top="10"
                      ItemsSource="{Binding Path=Model.ChestTypes}"
                      SelectedItem="{Binding Path=Model.ChestType}" />
            <Label Content="Locked" Canvas.Left="36" Canvas.Top="40" />
            <ComboBox Canvas.Left="81" Canvas.Top="37"
                      ItemsSource="{Binding Path=Model.LockedTypes}"
                      SelectedItem="{Binding Path=Model.LockedType}" />
            <Label Content="Trap Type" Canvas.Left="23" Canvas.Top="67" />
            <ComboBox Canvas.Left="81" Canvas.Top="64"
                      ItemsSource="{Binding Path=Model.TrapTypes}"
                      SelectedItem="{Binding Path=Model.TrapType}" />
        </Canvas>
        <Label Content="Gold" Canvas.Top="170" Canvas.Left="220" />
        <TextBox Canvas.Left="250" Canvas.Top="169" Width="84" HorizontalContentAlignment="Left" d:Text="47,004">
            <TextBox.Text>
                <Binding Path="Model.Gold">
                    <Binding.Converter>
                        <controls:StringToIntConverter EmptyStringValue="0" />
                    </Binding.Converter>
                </Binding>
            </TextBox.Text>
            <b:Interaction.Behaviors>
                <controls:NumericOnlyBehavior />
            </b:Interaction.Behaviors>
        </TextBox>
        <Button Content="Apply"
                Canvas.Left="230" Canvas.Top="214"
                Width="48"
                Command="{Binding Path=WriteMonsterStateCommand}"
                IsEnabled="{Binding Path=IsReady}" />
    </Canvas>
</UserControl>
