<UserControl x:Class="Mordorings.Modules.EditMap.EditMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mordorings.Modules.EditMap"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:EditMapViewModel}">
	<UserControl.Resources>
		<Style TargetType="Label" BasedOn="{StaticResource ResourceKey=LabelNoPadding}" />
	</UserControl.Resources>
	<DockPanel>
		<Grid DockPanel.Dock="Right">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Canvas Height="50" Grid.Row="0">
				<Button Content="&lt;" Canvas.Left="5" Canvas.Top="20"
						Command="{Binding Path=DecreaseFloorCommand}" HorizontalAlignment="Center" VerticalAlignment="Top" />
				<Label Content="Floor" Canvas.Left="18" Canvas.Top="4.04" HorizontalAlignment="Center" VerticalAlignment="Top" />
				<TextBox Text="{Binding Path=SelectedFloorNum, Converter={StaticResource ResourceKey=StringToInt0}, UpdateSourceTrigger=PropertyChanged}"
						 Canvas.Top="21" Canvas.Left="22.21"
						 Width="20"
						 d:Text="15"
						 HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" />
				<Button Content=">" Canvas.Left="47.21" Canvas.Top="20"
						Command="{Binding Path=IncreaseFloorCommand}" HorizontalAlignment="Center" VerticalAlignment="Top" />
			</Canvas>
			<local:EditTileControl Grid.Row="1" Width="300" />
		</Grid>
		<Grid DockPanel.Dock="Left" Margin="0, 50, 0, 10">
			<Image Source="{Binding Path=SelectedFloor.Image, FallbackValue={x:Null}}"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   MinWidth="421" MinHeight="421">
				<b:Interaction.Triggers>
					<b:EventTrigger EventName="MouseLeftButtonUp">
						<b:InvokeCommandAction Command="{Binding Path=GetImageMouseClickCommand}"
                                               PassEventArgsToCommand="True" />
					</b:EventTrigger>
				</b:Interaction.Triggers>
			</Image>
		</Grid>
	</DockPanel>
</UserControl>
