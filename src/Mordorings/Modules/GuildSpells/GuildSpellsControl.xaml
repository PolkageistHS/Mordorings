<UserControl x:Class="Mordorings.Modules.GuildSpells.GuildSpellsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:spellStats="clr-namespace:Mordorings.Modules.GuildSpells"
             xmlns:controls="clr-namespace:Mordorings.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance spellStats:GuildSpellsViewModel}">
    <UserControl.Resources>
        <controls:StringToIntConverter EmptyStringValue="0" x:Key="StringToInt" />
        <Style TargetType="Label">
            <Setter Property="Padding" Value="0" />
        </Style>
    </UserControl.Resources>
    <Canvas>
        <Label Content="Guild" Canvas.Left="10" Canvas.Top="13" />
        <ComboBox Canvas.Left="43" Canvas.Top="10" Width="120"
                  ItemsSource="{Binding Path=Guilds}"
                  SelectedItem="{Binding Path=SelectedGuild}" />
        <Label Content="Guild Level"
               Canvas.Left="10" Canvas.Top="50" />
        <TextBox Canvas.Left="10" Canvas.Top="71"
                 Width="58">
            <TextBox.Text>
                <Binding Path="GuildLevel"
                         Converter="{StaticResource ResourceKey=StringToInt}"
                         UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <Label Content="Spell Level"
               Canvas.Left="90" Canvas.Top="50" />
        <TextBox Text="{Binding Path=SpellLevel}"
                 Canvas.Left="90" Canvas.Top="71"
                 IsEnabled="False"
                 Width="58" />

    </Canvas>
</UserControl>
