<UserControl x:Class="Mordorings.Modules.LevelRequirementsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:modules="clr-namespace:Mordorings.Modules"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance modules:LevelRequirementsViewModel}">
	<DockPanel LastChildFill="True">
		<Canvas DockPanel.Dock="Top"
                Height="130">
			<Label Content="Race"
                   Canvas.Left="11" Canvas.Top="1" />
			<ComboBox Canvas.Left="10" Canvas.Top="17"
                      Width="120"
                      ItemsSource="{Binding Path=Races}"
                      SelectedItem="{Binding Path=SelectedRace}"
                      DisplayMemberPath="Name" />
			<Label Content="Guild"
                   Canvas.Left="11" Canvas.Top="45" />
			<ComboBox Canvas.Left="10" Canvas.Top="61"
                      Width="120"
                      ItemsSource="{Binding Path=Guilds}"
                      SelectedItem="{Binding Path=SelectedGuild}"
                      DisplayMemberPath="Name" />
			<Label Content="Target Level"
                   Canvas.Left="17" Canvas.Top="95" />
			<TextBox Canvas.Left="85" Canvas.Top="94"
                     Width="45"
                     Text="{Binding Path=TargetLevel, UpdateSourceTrigger=PropertyChanged}" 
					 d:Text="999" />
			<Label Content="XP for Next Level"
                   Canvas.Left="145" Canvas.Top="12" />
			<TextBox Text="{Binding Path=Experience, StringFormat={}{0:N0}}"
                     Canvas.Left="240" Canvas.Top="11"
                     Width="85"
                     TextWrapping="Wrap"
                     IsEnabled="False"
                     d:Text="428,855,314" />
			<Label Content="XP to Pin"
                   Canvas.Left="187" Canvas.Top="35" />
			<TextBox Text="{Binding Path=ExperienceForPin, StringFormat={}{0:N0}}"
                     Canvas.Left="240" Canvas.Top="34"
                     Width="85"
                     TextWrapping="Wrap"
                     IsEnabled="False"
                     d:Text="429,715,063" />
			<Label Content="Gold Required"
                   Canvas.Left="159" Canvas.Top="58" />
			<TextBox Text="{Binding Path=Gold, StringFormat={}{0:N0}}"
					 d:Text="41,971,748"
                     Canvas.Left="240" Canvas.Top="57"
                     Width="85"
                     TextWrapping="Wrap"
                     IsEnabled="False" />
			<Label Content="Total Gold Spent"
                   Canvas.Left="147" Canvas.Top="81" />
			<TextBox Text="{Binding Path=TotalGold, StringFormat=\{0:N0\}}"
                     Canvas.Left="240" Canvas.Top="80"
                     Width="85"
                     TextWrapping="Wrap"
                     IsEnabled="False"
					 d:Text="13,983,617,048" />
		</Canvas>
		<Border Margin="5"
                BorderBrush="SlateGray"
                BorderThickness="0.5">
			<ContentControl Content="{Binding Path=GraphViewModel}" />
		</Border>
	</DockPanel>
</UserControl>
