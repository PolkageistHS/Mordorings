<UserControl x:Class="Mordorings.Modules.RaceGuildGraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:livechart="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:modules="clr-namespace:Mordorings.Modules"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance modules:RaceGuildGraphViewModel}">
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="VisibilityConverter" />
		<Style TargetType="Label">
			<Setter Property="Padding" Value="0" />
		</Style>
	</UserControl.Resources>
	<DockPanel>
		<Canvas DockPanel.Dock="Left" Width="100">
			<Button Content="Toggle Chart"
					Canvas.Left="10" Canvas.Top="10"
					Height="20" Width="80" 
                    Command="{Binding Path=ToggleViewCommand}" 
					FontSize="11" />
			<GroupBox Header="Group 1"
                      Canvas.Left="5" Canvas.Top="40"
                      Height="105" Width="90">
				<Canvas>
					<Label Content="Race"
                           Canvas.Left="1" Canvas.Top="1" />
					<ComboBox Canvas.Left="1" Canvas.Top="17"
                              Width="77"
                              ItemsSource="{Binding Path=Races}"
                              SelectedItem="{Binding Path=RaceOne}"
                              DisplayMemberPath="Name" />
					<Label Content="Guild" Canvas.Left="1" Canvas.Top="45" />
					<ComboBox Canvas.Left="1" Canvas.Top="61"
                              Width="77"
                              ItemsSource="{Binding Path=Guilds}"
                              SelectedItem="{Binding Path=GuildOne}"
                              DisplayMemberPath="Name" />
				</Canvas>
			</GroupBox>
			<GroupBox Header="Group 2"
                      Canvas.Left="5" Canvas.Top="150"
                      Height="105" Width="90">
				<Canvas>
					<Label Content="Race" 
                           Canvas.Left="1" Canvas.Top="1" />
					<ComboBox Canvas.Left="1" Canvas.Top="17"
							  Width="77"
                              ItemsSource="{Binding Path=Races}"
                              SelectedItem="{Binding Path=RaceTwo}"
                              DisplayMemberPath="Name" />
					<Label Content="Guild" 
                           Canvas.Left="1" Canvas.Top="45" />
					<ComboBox Canvas.Left="1" Canvas.Top="61"
							  Width="77"
                              ItemsSource="{Binding Path=Guilds}"
                              SelectedItem="{Binding Path=GuildTwo}"
                              DisplayMemberPath="Name" />
				</Canvas>
			</GroupBox>
		</Canvas>
		<TextBlock Text="Experience per Level Comparison" 
                   DockPanel.Dock="Top"
                   HorizontalAlignment="Center"
                   Visibility="{Binding Path=ShowXpChart, Converter={StaticResource ResourceKey=VisibilityConverter}}" />
		<TextBlock Text="Gold per Level Comparison" 
                   DockPanel.Dock="Top"
                   HorizontalAlignment="Center"
                   Visibility="{Binding Path=ShowGoldChart, Converter={StaticResource ResourceKey=VisibilityConverter}}"
				   d:Visibility="Collapsed" />
		<livechart:CartesianChart Series="{Binding Path=Chart.Series}"
                                  XAxes="{Binding Path=Chart.XAxes}"
                                  YAxes="{Binding Path=Chart.YAxes}"
                                  LegendPosition="Top">
			<livechart:CartesianChart.Visibility>
				<Binding Path="IsChartEnabled">
					<Binding.Converter>
						<BooleanToVisibilityConverter />
					</Binding.Converter>
				</Binding>
			</livechart:CartesianChart.Visibility>
		</livechart:CartesianChart>
	</DockPanel>
</UserControl>
