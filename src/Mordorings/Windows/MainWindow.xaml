<Window x:Class="Mordorings.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Mordorings.ViewModels"
        Title="Mordorings" 
        Height="900" Width="1100"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">
    <Grid Background="#FF202020">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="1">
			<Grid DockPanel.Dock="Left">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition Width="110" />
				</Grid.ColumnDefinitions>
				<Button Content="Edit"
                        Grid.Row="1" Grid.Column="0"
                        Command="{Binding Path=OpenEditMenuCommand}" />
				<Button Content="Map"
                        Grid.Row="2" Grid.Column="0"
                        Command="{Binding Path=OpenMapMenuCommand}" />
				<Button Content="Calculations"
                        Grid.Row="3" Grid.Column="0"
                        Command="{Binding Path=OpenCalculationsMenuCommand}" />
				<ContentControl Content="{Binding Path=SubMenu}"
                                Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" />
			</Grid>
			<TextBlock DockPanel.Dock="Top"
                       Margin="5"
                       TextWrapping="WrapWithOverflow">
				<TextBlock.Text>
					<Binding Path="ViewModel.Instructions" FallbackValue="" />
				</TextBlock.Text>
			</TextBlock>
			<ContentControl Content="{Binding Path=ViewModel}" Margin="5,0,5,5" />
		</DockPanel>
	</Grid>
</Window>
